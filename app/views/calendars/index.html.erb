<h1>Listing calendars</h1>

<table>
  <tr>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
    <th>Sunday</th>
  </tr>

<% for calendar in @calendars %>
  <tr>
    <td><%=h calendar.monday %></td>
    <td><%=h calendar.tuesday %></td>
    <td><%=h calendar.wednesday %></td>
    <td><%=h calendar.thursday %></td>
    <td><%=h calendar.friday %></td>
    <td><%=h calendar.saturday %></td>
    <td><%=h calendar.sunday %></td>
    <td><%= link_to 'Show', calendar %></td>
    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
    <td><%= link_to 'Destroy', calendar, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

