<h1>Listing calendars</h1>

<table>
  <tr>
    <th>Monday</th>
    <th>Tuesday</th>
    <th>Wednesday</th>
    <th>Thursday</th>
    <th>Friday</th>
    <th>Saturday</th>
    <th>Sunday</th>
  </tr>

<% for calendar in @calendars %>
  <tr>
    <td><%=h simple_format(calendar.monday) %></td>
    <td><%=h simple_format(calendar.tuesday) %></td>
    <td><%=h simple_format(calendar.wednesday) %></td>
    <td><%=h simple_format(calendar.thursday) %></td>
    <td><%=h simple_format(calendar.friday) %></td>
    <td><%=h simple_format(calendar.saturday) %></td>
    <td><%=h simple_format(calendar.sunday) %></td>
    <td><%= link_to 'Show', calendar %></td>
    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
    <td><%= link_to 'Destroy', calendar, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

