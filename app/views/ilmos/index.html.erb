<h1>Ilmoittautuneet pelaajat</h1>

<h2>Hyväksyntää odottavat</h2>
<table>
  <tr>
    <th>Käyttäjä</th>
    <th>Alias</th>
    <th>Kohdesivu</th>
  </tr>

<% for player in @waiting_players %>
  <tr>
    <td><%=h player.user.full_name %></td>
    <td><%=h player.alias %></td>
    <td><%= link_to player.real_name, tournament_target_path(@tournament, player) %></td>
    <td><%= link_to 'Muokkaa peitenimeä', edit_tournament_player_path(@tournament, player) %></td>
    <td>
      <% form_for [@tournament, player] do |p|  %>
        <%= p.hidden_field :status, { :value => :active } %>
        <%= submit_tag "Hyväksy peliin" %>
      <% end %>
    </td>
  </tr>
<% end %>

</table>

