      %td
        - form_for [@tournament, player] do |p|
          = p.hidden_field :status, { :value => :detective }
          = submit_tag "Etsiväksi"
      %td
        - form_for [@tournament, player] do |p|
          = p.hidden_field :status, { :value => :active }
          = submit_tag "Henkiin"
