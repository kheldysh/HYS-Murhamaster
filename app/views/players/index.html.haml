%table
  %tr
    %th Käyttäjä
    %th Alias
    %th Kohdesivu
    %th Pelaajatuomari
  - for player in @dead_players
    %tr
      %td= h player.user.full_name
      %td= h player.alias
      %td= link_to player.real_name, tournament_player_path(@tournament, player)
      %td
        - if player.referee != nil
          = h player.referee.user.full_name
        - else
