%h3= @ring.tournament.title
= form_for([@ring.tournament, @ring]) do |f|
  %table
    %tr
      %th Murhaaja
      %th
      %th Kohde
    = f.fields_for :assignments do |ass_form|
      %tr
        %td
          = ass_form.collection_select(:player_id, @active_players, :id, :with_real_name)
        %td
          \->
        %td
          = ass_form.collection_select(:target_id, @active_players, :id, :with_real_name)
  = f.submit 'Päivitä'
%h4 Lisää toimeksianto
= form_for([@ring.tournament, @ring, @new_assignment]) do |f|
  = f.label :Murhaaja
  %br/
  = f.collection_select(:player_id, @active_players, :id, :with_real_name)
  %br/
  = f.label :Kohde
  %br/
  = f.collection_select(:target_id, @active_players, :id, :with_real_name,  prompt: '(valitse)')
  %p
  = f.submit 'Lisää'
