
<h3><%= @tournament.title %></h3>
<% for ring in @tournament.rings %>
<table>
  <tr>
    <th>Murhaaja</th>
    <th></th>
    <th>Kohde</th>
    <th><b><%= link_to 'Poista rengas', tournament_ring_path(@tournament, ring), :method => :delete, :confirm => 'Haluatko varmasti poistaa renkaan?' %>/<b></th>
  </tr>

<% for assignment in ring.assignments %>
  <tr>
    <td><%=h assignment.player.user.full_name %>
        (<%=h assignment.player.alias %>)</td>
    <td> ->  </td>
    <td><%=h assignment.target.user.full_name %>
        (<%=h assignment.target.alias %>)</td>

    <td><%= link_to 'Poista', tournament_ring_assignment_path(@tournament, ring, assignment), :method => :delete %></td>
  </tr>
<% end %>
</table>
<% end %>

<%= link_to 'Uusi rengas', new_tournament_ring_path(@tournament) %>
