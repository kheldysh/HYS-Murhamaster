%h1 Login
- form_tag 'create' do
  %label{:for => "user_login"}= t 'session.username'
  %br/
  = text_field 'user', 'login', :size => 20
  %br/
  %label{:for => "user_login"}= t 'session.password'
  %br/
  = password_field 'user', 'password', :size => 20
  %br/
  %p
    = submit_tag t 'session.login'
