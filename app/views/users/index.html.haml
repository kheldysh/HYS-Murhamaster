%h1 Login
- form_for @user, :url=>session_url do |f|
  %p
    = f.label t('session.username')
    %br/
    = f.text_field :username
  %p
    = f.label t('session.password')
    %br/
    = f.password_field :password
  = submit_tag t('session.login')
%br/
= link_to t('session.register'), new_user_path
