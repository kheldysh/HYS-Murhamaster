<h3><%= @tournament.title %></h3>
<% form_for( [@tournament, @warrant] ) do |f| %>
  <%#= f.error_messages %>
  <table>
    <tr>
      <th>Etsivät</th>
      <th></th>
      <th>Kohde</th>
    </tr>

    <tr>
      <td class=warrant>
      <% f.fields_for :assignments do |ass_form| %>
        <%= ass_form.label ass_form.object.player.with_real_name %> 
        <span class="warrant">
        <%= ass_form.check_box :player_id, {}, ass_form.object.player.id  %>
        </span>
        <br />
      <% end %>
      </td>
      <td>
      ->
      </td>
      <td>
        <%= f.collection_select :target_id, @active_players, :id, :with_real_name, {:prompt => "(valitse)"} %>
      </td>
    </tr>
    
  </table>
  <%= f.submit "Lisää" %>

<% end %>

